#!/bin/bash
swaylock \
 	-f \
 	--screenshots \
 	--clock --indicator \
	--indicator-radius 120 \
	--indicator-thickness 7 \
	--effect-blur 7x5 \
	--effect-vignette	0.5:0.5 \
	--ring-color 1460d2 \
	--key-hl-color 00bbbb \
	--line-color 00000000 \
	--inside-color 00000088 \
	--separator-color 00000000 \
	--fade-in 0.2 \
	--grace 2
